{
  "name": "vivadoc",
  "version": "1.0.5",
  "description": "AI-powered living documentation for codebases - Chat with your code using natural language",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "vivadoc": "dist/cli.js"
  },
  "scripts": {
    "build": "npm run clean && tsc && npm run copy-assets",
    "clean": "rm -rf dist",
    "copy-assets": "cp -r public dist/ && cp README.md dist/",
    "dev": "tsx src/cli.ts dev",
    "start": "node dist/cli.js",
    "test": "vitest run",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "documentation",
    "ai",
    "chatbot",
    "code-search",
    "semantic-search",
    "developer-tools",
    "llm",
    "openai",
    "ollama",
    "typescript",
    "react",
    "nextjs",
    "vue",
    "svelte",
    "angular"
  ],
  "author": "Vivadoc Team <team@vivadoc.dev>",
  "license": "MIT",
  "homepage": "https://github.com/vivadoc/vivadoc#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/vivadoc/vivadoc.git"
  },
  "bugs": {
    "url": "https://github.com/vivadoc/vivadoc/issues"
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "fast-glob": "^3.3.2",
    "glob": "^10.3.10",
    "helmet": "^7.1.0",
    "ora": "^7.0.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.55.0",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
